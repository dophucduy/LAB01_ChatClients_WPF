<Window x:Class="Chat.Client.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Internal Chat Client" Height="700" Width="1000">
    <Grid Background="#f5f5f5">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Login Panel với styling đẹp hơn -->
        <Border x:Name="LoginPanel" Grid.Row="0" Background="White" 
                BorderBrush="#ddd" BorderThickness="0,0,0,1" Padding="20">
            <StackPanel>
                <TextBlock Text="🔐 Internal Chat Login" 
                           FontSize="20" FontWeight="Bold" 
                           Foreground="#333" Margin="0,0,0,15"/>
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                    <TextBlock Text="Username:" VerticalAlignment="Center" 
                               Margin="0,0,10,0" FontSize="14" Width="80"/>
                    <TextBox x:Name="UsernameInput" Width="200" Height="30" 
                             FontSize="14" Padding="5" Text="User1"/>
                </StackPanel>
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,10,0,0">
                    <TextBlock Text="Password:" VerticalAlignment="Center" 
                               Margin="0,0,10,0" FontSize="14" Width="80"/>
                    <PasswordBox x:Name="PasswordInput" Width="200" Height="30" 
                                 FontSize="14" Padding="5"/>
                </StackPanel>
                <Button x:Name="ConnectButton" Content="Connect" 
                        Click="ConnectButton_Click" 
                        Background="#007acc" Foreground="White"
                        Padding="15,5" Margin="0,15,0,0" 
                        HorizontalAlignment="Center"
                        BorderThickness="0" Cursor="Hand"/>
            </StackPanel>
        </Border>

        <!-- Main Chat Area -->
        <Grid x:Name="ChatPanel" Grid.Row="1" Visibility="Collapsed">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="250"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- User List với styling -->
            <Border Grid.Column="0" Background="White" Margin="10" 
                    BorderBrush="#ddd" BorderThickness="1" CornerRadius="5">
                <StackPanel Margin="10">
                    <TextBlock Text="👥 Online Users" FontWeight="Bold" 
                               FontSize="16" Margin="0,0,0,10"/>
                    <ListBox x:Name="UserList" Height="450" 
                             BorderThickness="1" BorderBrush="#ccc"/>
                    <Button x:Name="DisconnectButton" Content="🔌 Disconnect" 
                            Click="DisconnectButton_Click" 
                            Background="#dc3545" Foreground="White"
                            Margin="0,15,0,0" Padding="10,5" 
                            BorderThickness="0" Cursor="Hand"/>
                </StackPanel>
            </Border>

            <!-- Chat Display Area -->
            <Grid Grid.Column="1" Margin="0,10,10,10">
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- Chat Messages Display -->
                <Border Grid.Row="0" Background="White" 
                        BorderBrush="#ddd" BorderThickness="1" CornerRadius="5">
                    <ScrollViewer x:Name="ChatScroll" VerticalScrollBarVisibility="Auto">
                        <StackPanel x:Name="ChatDisplayPanel" Margin="10"/>
                    </ScrollViewer>
                </Border>

                <!-- Message Input Area -->
                <Border Grid.Row="1" Background="White" 
                        BorderBrush="#ddd" BorderThickness="1" 
                        CornerRadius="5" Margin="0,10,0,0">
                    <StackPanel Margin="10">
                        <StackPanel Orientation="Horizontal" Margin="0,0,0,5">
                            <TextBlock Text="To:" VerticalAlignment="Center" Margin="0,0,10,0"/>
                            <ComboBox x:Name="RecipientComboBox" Width="150" Height="25">
                                <ComboBoxItem Content="Everyone (Public)" IsSelected="True"/>
                            </ComboBox>
                        </StackPanel>
                        <StackPanel Orientation="Horizontal">
                            <TextBox x:Name="MessageInput" Width="600" Height="35" 
                                     FontSize="14" Padding="8" 
                                     KeyDown="MessageInput_KeyDown"
                                     BorderBrush="#ccc" BorderThickness="1"/>
                            <Button Content="Send 📤" Click="SendButton_Click" 
                                    Background="#28a745" Foreground="White"
                                    Padding="15,5" Margin="10,0" 
                                    BorderThickness="0" Cursor="Hand"/>
                            <Button Content="😊" Click="EmojiButton_Click" 
                                    Background="#ffc107" Foreground="Black"
                                    Width="40" Height="35" 
                                    BorderThickness="0" Cursor="Hand"/>
                        </StackPanel>
                    </StackPanel>
                </Border>
            </Grid>
        </Grid>
    </Grid>
</Window>
